<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InterFace.Province.AddProvinceActivity">





    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edtLT_p_code"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_p_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/province_code">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edtLT_p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/province_name">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout style="@style/s_title_content_small">

        <TextView
            style="@style/s_title_content_small_text"
            android:text="@string/religion" />

        <View style="@style/s_title_content_small_view"></View>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_p_religion"
        android:layout_width="match_parent"
        android:layout_height="50dp"></Spinner>

    <LinearLayout
        style="@style/s_horizontal">

        <Button
            android:id="@+id/btn_add_province"
            style="@style/s_buttonBasic"
            android:text="@string/add"></Button>

        <Button
            android:id="@+id/btn_p_cancel"
            style="@style/s_buttonBasic"
            android:text="@string/cancel"></Button>

    </LinearLayout>

</LinearLayout>